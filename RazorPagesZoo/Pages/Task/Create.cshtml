@page
@model RazorPagesZoo.Pages.Task.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Задание</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Task.IdTask" class="control-label"></label>
                <input asp-for="Task.IdTask" class="form-control" />
                <span asp-validation-for="Task.IdTask" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.IdAnimal" class="control-label"></label>
                <select asp-for="Task.IdAnimal" class="form-control" asp-items="ViewBag.IdAnimal"></select>
                <span asp-validation-for="Task.IdAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.IdCage" class="control-label"></label>
                <select asp-for="Task.IdCage" class="form-control" asp-items="ViewBag.IdCage"></select>
                <span asp-validation-for="Task.IdCage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <input asp-for="Task.Description" class="form-control" />
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.DateDrop" class="control-label"></label>
                <input asp-for="Task.DateDrop" class="form-control" />
                <span asp-validation-for="Task.DateDrop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Deadline" class="control-label"></label>
                <input asp-for="Task.Deadline" class="form-control" />
                <span asp-validation-for="Task.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
