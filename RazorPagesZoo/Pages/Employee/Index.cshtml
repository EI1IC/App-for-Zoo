        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkEfficiency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityUserId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdEmployee">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdEmployee">Details</a> |
